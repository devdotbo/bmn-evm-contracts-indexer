{
  "compilerOptions": {
    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // Interop constraints
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Language and environment
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["ES2022"],
    "target": "ES2022",

    // Skip type checking for node modules
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "ponder.config.alternative.ts",
    "ponder.config.enhanced.ts",
    "ponder.config.final.ts",
    "ponder.config.fixed.ts",
    "ponder.config.solution.ts",
    "src/index.alternative.ts",
    "src/index.enhanced.ts"
  ]
}
